 <script src="//cdn.bootcss.com/Chart.js/2.7.1/Chart.bundle.min.js"></script>
<h1><%= @event.name %></h1>
<p>
  <%= link_to "打開前台", event_path(@event), :target => "_blank", :class => "btn btn-primary" %>
</p>
<ul>

<%= sanitize @event.description %>
 <canvas id="myChart1" width="400" height="200"></canvas>
 <script>
 var ctx1 = document.getElementById("myChart1");
 var myChart1 = new Chart(ctx1, {
     type: 'bar', // 長條圖
     data: <%= raw @data1.to_json %>,// 横轴的标籤有哪些// 数据集的名称 // 数据(这是数组)// 要有框线
     options: {
         scales: {
             yAxes: [{
                 ticks: {
                     beginAtZero:true// X軸要從0起跳
                 }
             }]
         }
     }
 });
 </script>
 <hr>

<canvas id="myChart2" width="400" height="200"></canvas>
<script>
var ctx2 = document.getElementById("myChart2");
var myChart2 = new Chart(ctx2, {
    type: 'bar',
    data: <%= raw @data2.to_json %>,
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>

<canvas id="myChart3" width="400" height="200"></canvas>
<script>
var ctx3 = document.getElementById("myChart3");
var myChart3 = new Chart(ctx3, {
    type: 'line',//折線圖
    data: <%= raw @data3.to_json %>,
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>